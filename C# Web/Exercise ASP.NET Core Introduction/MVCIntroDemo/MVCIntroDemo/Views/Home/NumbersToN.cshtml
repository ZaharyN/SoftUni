@{
	ViewBag.Title = "Nums 1 ... " + ViewBag.Count; 
}

<h2>@ViewBag.Title</h2>
<ul>
	@for(int i = 1; i <= ViewBag.Count; i++)
	{
		<li>@i</li>
	}
</ul>

<form 
	asp-controller="Home" asp-action="NumbersToN" method="post">
	<div class="row">
		<div class="col">
			<input type ="number" min="0" step="1" name="count" />
		</div>
		<div class="col">
			<input class="btn btn-primary" value="Submit" />
		</div>
	</div>
</form> 